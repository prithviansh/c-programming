#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    float P, R, T, SI;

    // Input principal, rate, and time
    scanf("%f %f %f", &P, &R, &T);

    // Calculate Simple Interest
    SI = (P * R * T) / 100;

    // Output result up to 2 decimal places
    printf("%.2f\n", SI);
   
    return 0;
}
